<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#121212"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/_61"
        android:scaleType="centerCrop" />

    
    <EditText
        android:id="@+id/editText_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Hesabın Kodu"
        android:inputType="number"
        android:padding="18dp"
        android:textColor="#E13D3D"
        android:textColorHint="#E13D3D"
        android:textSize="20sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editText_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Hesabın Kullanıcı Adı"
        android:inputType="text"
        android:padding="18dp"
        android:textColor="#E13D3D"
        android:textColorHint="#E13D3D"
        android:textSize="20sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Hesabın Şifresi"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColor="#E13D3D"
        android:textColorHint="#E13D3D"
        android:textSize="20sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editText_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Hesabın Ligi"
        android:inputType="text"
        android:padding="18dp"
        android:textColor="#E13D3D"
        android:textColorHint="#E13D3D"
        android:textSize="20sp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E13D3D"
        android:text="HESAP EKLE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button_list_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E13D3D"
        android:text="GÜNCELLE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button_account_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E13D3D"
        android:text="HESAP KALDIR"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button_account_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E13D3D"
        android:text="LİSTEYİ GÖRÜNTÜLE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <ListView
        android:id="@+id/listView_accounts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp" />
</LinearLayout>
